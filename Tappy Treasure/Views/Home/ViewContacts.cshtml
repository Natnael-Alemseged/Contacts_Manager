@model List<Contacts_Manager.Models.Contact>


        <h1>Contact List</h1>

        <table class="table"> 
            <thead>
                <tr>
                    <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Message</td>
                </tr>
            </thead>
            <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                <td>@contact.Id</td>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.Message</td>
                <td>
                    
                    <form asp-controller="Home" asp-action="Delete" asp-route-id="@contact.Id" method="post">
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@contact.Id">Edit</a>
                    <button class="btn btn-danger" >Delete</button>
                    </form>
                </td>
            </tr>

            }
        </tbody>
        </table>
  
